<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@facebook) do |f| %>
			<%= f.label :mail %>
			<%= f.text_field :mail %>
      <%= f.label :password %>
			<%= f.text_field :password %>
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
